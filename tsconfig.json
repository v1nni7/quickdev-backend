{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "tests/*.test.ts", "tests"]
}
